---
import './companies.css';

const logos = [
    {
        link: 'https://automatio.ai',
        alt: 'Logo of Automatio AI company',
        logo: '/logos/automatio.ai.png',
    },
    {
        link: 'https://zaparoo.org/',
        alt: 'Logo of Zaparoo company',
        logo: '/logos/zaparoo.png',
    }
]

---
<section id="companies">
  <h2>Companies using Fabric.js</h2>
  <div id="logos">
    {logos.map((logo) => <a href={logo.link} target="_blank">
        <div class="imageContainer">
            <img src={logo.logo} alt={logo.alt} loading="lazy">
        </div>
        <p>{logo.alt}</p>
    </a>)}
  </div>
</section>
